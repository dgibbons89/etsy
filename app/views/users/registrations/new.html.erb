<section id="register">
  <div class="wide has-padding">
        <div class="panel panel-default">
          <div class="panel center">
            <h3>Enter Your Information</h3>
          </div>

          <div class="panel-body">
             
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <div class="row">
                  <div class="col-md-12 col-xs-12">
                   <%= f.label :name %>
                   <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: 'e.g. John Doe' %>
                 </div>
                </div>
              </div>

                          

              <div class="form-group">
                <div class="row">
                  <div class="col-md-12 col-xs-12">
                    <%= f.label :email %>
                    <%= f.email_field :email, class: "form-control", placeholder: 'e.g. johndoe@test.com' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="row">
                  <div class="col-md-10 col-xs-12">
                    <%= f.label :password %>
                    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: 'must be at least 8 characters' %>
                  </div>
                </div>
              </div>
              </div>
           

           
              <div class="panel-footer center">
                  <%= f.submit "Create Your Account", class: "btn btn-lg btn-primary" %>
              </div>
            <% end %>
       
    
       
    </div>
</div>
</section>